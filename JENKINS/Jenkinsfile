pipeline {
    agent {
        node{
            label 'AGENT-1'
        }
    }
    environment {
        GREETING = 'Hello Jenkins'
    }

    stages {
        stage('Hello') {
            steps {
                echo "Hello"
            }
        }
        stage('Earth'){
            steps{
                echo "Earth"
            }
        }
        stage('Good Morning'){
            steps{
                echo "Good Morning"
            }
        }
    }
    post {
        always {
            echo "Pipeline execution completed"
        }
        failure {
            echo "Pipeline Fialed"
        }
        success{
            echo "Pipeline Success"
        }
    }
}